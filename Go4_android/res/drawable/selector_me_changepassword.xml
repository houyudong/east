<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list>
            <item><shape>
                    <solid android:color="#e8e7e9" />
                </shape></item>
            <item android:bottom="0.7dip"><shape>
                    <solid android:color="@color/white" />
                </shape></item>
        </layer-list></item>
    <item android:state_pressed="true">
        <!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list>
            <item><shape>
                    <solid android:color="@color/white" />
                </shape></item>
            <item><shape>
                    <solid android:color="@color/white" />
                </shape></item>
            <item android:top="0.7dip"><shape>
                    <solid android:color="@color/white" />
                </shape></item>
        </layer-list></item>

</selector>