<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dip"
        android:paddingLeft="55dip"
        android:paddingRight="15dip"
        android:paddingStart="55dip" >

        <com.xflyme.go4.view.CircleImageView
            android:id="@+id/iv_item_feedback"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/item_feed_head_back" />

        <TextView
            android:id="@+id/tv_item_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_marginEnd="5dip"
            android:textColor="@color/white"
            android:background="@drawable/item_feedback_green"
            android:layout_marginTop="3dip"
            android:textSize="16sp"
            android:layout_toStartOf="@+id/iv_item_feedback"
            android:layout_toLeftOf="@+id/iv_item_feedback"
            android:text="TextView" />
    </RelativeLayout>

</LinearLayout>