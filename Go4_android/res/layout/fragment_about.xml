<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <TextView
                android:id="@+id/tv_about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="The Florida"
                android:textColor="#555656"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_about_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_about_pic" />

            <TextView
                android:id="@+id/tv_about_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="TextView"
                android:textColor="#7b797a"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip" >

        <TextView
            android:id="@+id/tv_about_cando"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_aboutus"
            android:gravity="center"
            android:text="@string/manager_about_cando"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_about_managerment"
            android:background="@drawable/selector_btn_aboutus"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/manager_about_managerment"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>