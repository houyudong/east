            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_unit"
            android:layout_toRightOf="@id/iv_unit"
            android:background="@null"
            android:ems="10"
            android:hint="@string/regist_unit"
            android:textColor="@color/translucent"
            android:textColorHint="@color/translucent" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_regist_relation"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="15dip"
