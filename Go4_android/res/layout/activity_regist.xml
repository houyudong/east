            android:src="@drawable/regist_unit" />

        <EditText
            android:id="@+id/et_regist_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
