        <EditText
            android:id="@+id/et_regist_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_relation"
            android:layout_toRightOf="@id/iv_relation"
            android:background="@null"
            android:ems="10"
            android:hint="@string/regist_relation"
            android:textColor="@color/translucent"
            android:textColorHint="@color/translucent" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_regist_ic"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_weight="11" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/translucent" />

        <ImageView
            android:id="@+id/iv_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
