<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6f6" >

    <include
        android:id="@+id/me_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_title"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/btn_me_info"
            android:layout_width="match_parent"
            android:layout_height="93dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/selector_me_head"
            android:onClick="onClick"
            android:padding="15dip" >

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/common_arrow_right" />

            <com.xflyme.go4.view.CircleImageView
                android:id="@+id/iv_me_head"
                android:layout_width="63dip"
                android:layout_height="63dip"
                android:layout_marginEnd="10dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_arrow_right"
                android:layout_toStartOf="@id/iv_arrow_right"
                android:src="@drawable/me_head_bg" />

            <ImageView
                android:id="@+id/iv_me_update_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/me_update_photo" />

            <TextView
                android:id="@+id/tv_me_update_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iv_me_update_photo"
                android:layout_toRightOf="@+id/iv_me_update_photo"
                android:text="@string/me_update_photo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/selector_me_property"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/me_update_name" />

            <EditText
                android:id="@+id/et_me_update_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/me_update_name_hint"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#c7c7c7"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/tv_me_update_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView1"
                android:layout_toRightOf="@+id/imageView1"
                android:text="@string/me_update_name"
                android:textColor="#606060" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/selector_me_property"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/me_update_phone" />

            <EditText
                android:id="@+id/et_me_update_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/me_update_phone_hint"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#c7c7c7"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/tv_me_update_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:text="@string/me_update_phone"
                android:textColor="#606060" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/selector_me_property"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/me_update_mail" />

            <EditText
                android:id="@+id/et_me_update_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/me_update_email_hint"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#c7c7c7"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/tv_me_update_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text="@string/me_update_email"
                android:textColor="#606060" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/selector_me_property"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/me_update_birthday" />

            <TextView
                android:id="@+id/et_me_update_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="end"
                android:hint="@string/me_update_birthday_hint"
                android:onClick="onClick"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#c7c7c7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_me_update_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:text="@string/me_update_birthday"
                android:textColor="#606060" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_me_update"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_btn_bottom"
        android:onClick="onClick"
        android:text="@string/me_update_update"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>